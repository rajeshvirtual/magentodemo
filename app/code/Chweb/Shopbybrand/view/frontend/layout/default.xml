<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Chweb\Shopbybrand\Block\Link\Top" name="brand-list-link" before="authorization-link"/>
        </referenceBlock>
        <referenceBlock name="catalog.topnav">
            <block class="Magento\Framework\View\Element\Template" name="brand.menu" template="Chweb_Shopbybrand::position/topmenu.phtml" />
        </referenceBlock>
        <referenceBlock name="footer_links">
            <block class="Chweb\Shopbybrand\Block\Link\Footer" name="brand-footer-link" />
        </referenceBlock>
    </body>
</page>