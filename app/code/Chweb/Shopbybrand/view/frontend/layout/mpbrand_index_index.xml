<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Chweb_Shopbybrand::css/style.css"/>
    </head>
    <body>
        <referenceBlock name="head.additional">
            <block class="Chweb\Shopbybrand\Block\Design" name="brand.design" as="generator.css" template="design.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Chweb\Shopbybrand\Block\Brand" name="brand.content" template="brands.phtml">
                <block class="Chweb\Shopbybrand\Block\Brand\Search" name="brand.search" as="search" ifconfig="shopbybrand/brandpage/search/enable" template="brand/search.phtml"/>
                <block class="Chweb\Shopbybrand\Block\Brand\Featured" name="brand.featured" as="feature" ifconfig="shopbybrand/brandpage/feature/enable"/>
                <block class="Chweb\Shopbybrand\Block\Brand\BrandList" name="brand.list" as="list" template="brand/list.phtml"/>
            </block>
        </referenceContainer>
    </body>
</page>